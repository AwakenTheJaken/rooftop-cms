{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "A modern WordPress stack",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    },
    {
      "type": "vcs",
      "url": "ssh://git@bitbucket.org/errorstudio/rooftop-api-authentication"
    },
    {
        "type": "vcs",
        "url": "ssh://git@bitbucket.org/errorstudio/rooftop-admin-theme"
    },
    {
        "type": "vcs",
        "url": "ssh://git@bitbucket.org/errorstudio/rooftop-response-sanitiser"
    },
    {
        "type": "vcs",
        "url": "ssh://git@bitbucket.org/errorstudio/rooftop-gravityforms-exposer"
    },
    {
        "type": "vcs",
        "url": "ssh://git@bitbucket.org/errorstudio/rooftop-events"
    },
    {
        "type": "vcs",
        "url": "ssh://git@bitbucket.org/errorstudio/rooftop-posts2posts-exposer"
    }
  ],
  "require": {
    "php": ">=5.4",
    "composer/installers": "~1.0.12",
    "vlucas/phpdotenv"
      : "^2.0.1",
    "johnpbloch/wordpress": "4.3.0",
    "error/rooftop-api-authentication": "dev-development",
    "error/rooftop-admin-theme": "dev-development",
    "error/rooftop-response-sanitiser": "dev-development",
    "error/rooftop-gravityforms-exposer": "dev-development",
    "error/rooftop-events": "dev-development",
    "error/rooftop-preview-mode": "dev-development",
    "error/rooftop-posts2posts-exposer": "dev-development"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin", "type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  }
}
