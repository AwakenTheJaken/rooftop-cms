    },
    {
      "name": "Andy Wilkinson",
      "email": "andy@errorstudio.co.uk",
      "homepage": "https://github.com/andyerror"
    }
  ],
  "keywords": [
    "wp","cms","api","rooftop"
  ],
  "support": {
    "issues": "https://github.com/rooftopcms/rooftop-cms/issues"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    },
    {
      "type": "vcs",
      "url": "git@bitbucket.org:errorstudio/rooftop-api-authentication.git"
    },
    {
        "type": "vcs",
        "url": "git@bitbucket.org:errorstudio/rooftop-admin-theme.git"
    },
    {
        "type": "vcs",
        "url": "git@bitbucket.org:errorstudio/rooftop-response-sanitiser.git"
    },
    {
        "type": "vcs",
        "url": "git@bitbucket.org:errorstudio/rooftop-gravityforms-exposer.git"
    },
    {
        "type": "vcs",
        "url": "git@bitbucket.org:errorstudio/rooftop-events.git"
    },
    {
        "type": "vcs",
        "url": "git@bitbucket.org:errorstudio/rooftop-preview-mode.git"
    },
    {
        "type": "vcs",
        "url": "git@bitbucket.org:errorstudio/rooftop-queue-pusher.git"
    },
    {
        "type": "vcs",
        "url": "git@bitbucket.org:errorstudio/rooftop-webhooks-admin.git"
    },
    {
        "type": "vcs",
        "url": "git@bitbucket.org:errorstudio/rooftop-acf-exposer.git"
    },
    {
        "type": "vcs",
        "url": "git@bitbucket.org:errorstudio/rooftop-content-hierarchy.git"
    },
    {
        "type": "vcs",
        "url": "git@github.com:rooftopcms/wp-api-menus.git"
    }

  ],
  "require": {
    "php": ">=5.4",
    "composer/installers": "~1.0.12",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "4.3.0",
    "errorstudio/rooftop-preview-mode": "dev-development",
    "errorstudio/rooftop-api-authentication": "dev-development",
    "errorstudio/rooftop-admin-theme": "dev-development",
    "errorstudio/rooftop-response-sanitiser": "dev-development",
    "errorstudio/rooftop-gravityforms-exposer": "dev-development",
    "errorstudio/rooftop-events": "dev-development",
    "errorstudio/rooftop-queue-pusher": "dev-development",
    "errorstudio/rooftop-webhooks-admin": "dev-development",
    "errorstudio/rooftop-acf-exposer": "dev-development",
    "errorstudio/rooftop-content-hierarchy": "dev-development",
    "nekojira/wp-api-menus": "dev-wp-api-v2"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin", "type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  }
}
